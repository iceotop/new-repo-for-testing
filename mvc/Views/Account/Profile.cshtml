@model mvc.ViewModels.Account.ProfileViewModel

<section class="page-content">
    <h1>User: @Model.UserName (@Model.FirstName @Model.LastName)</h1>
    <ul style="margin: 1em;">
        @foreach (var book in Model.Books){

            <div style="border: 1px solid yellow; display: flex; align-items: center; list-style-type: none; padding: 1em;">
                <div class="book-image">
                    <img src="@book.ImageUrl" alt="thumbnail">
                </div>

                <div class="book-info">
                    <li><b style="font-size: 1.2em;">Book info:</b></li>
                    <li style="margin-left: 1em;">Title: @book.Title</li>
                    <li style="margin-left: 1em;">Author: @book.Author</li>
                    <li style="margin-left: 1em;">Publication Year: @book.PublicationYear</li>
                    <li><b style="font-size: 1.2em;">Review:</b> "@book.Review"</li>
                    <li><b style="font-size: 1.2em;">Status:</b> @book.ReadStatus</li>   
                </div>             
            </div>
            
        }
    </ul>
</section>