@model List<mvc.ViewModels.Search.SearchResultsViewModel>

<h1 id="instruction-text">STEP 2: CHOOSE BOOK</h1>

@foreach (var book in Model)
{
    <a asp-controller="book" asp-action="create" asp-route-id="@book.Id" class="book-card">
        <div class="book-image">
            <img src="@book.ImageUrl" alt="thumbnail">
        </div>
        <div class="book-info" style="display: inline-block;">
            <div class="book-title">@book.Title</div>
            <div class="book-year">@book.PublicationYear?.Substring(0, 4)</div>
            <div class="book-author">@book.Author</div>
        </div>
    </a>
}
