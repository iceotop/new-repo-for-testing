@model mvc.ViewModels.Search.BookDetailsViewModel


@{
    Model.PublicationYear = Model.PublicationYear?.Substring(0, 4);
}

<form asp-action="Create" asp-controller="Book" method="post">
    <img src="@Model.ImageUrl" alt="Book image here"/>
    <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
    <div class="book-metadata">
        <input type="hidden" asp-for="@Model.Title" />
        <input type="hidden" asp-for="@Model.Author" />
        <input type="hidden" asp-for="@Model.PublicationYear" />
        <div>@Model.Title</div>
        <div>@Model.PublicationYear</div>
        <div>@Model.Author</div>
    </div>
    <textarea name="Review" placeholder="Write your review here (optional)"></textarea>
    <div class="radio-buttons">
        <input type="radio" name="ReadStatus" value="Want to read" checked>
        <label for="wantToRead">Want to read</label>
        <input type="radio" name="ReadStatus" value="Have read">
        <label for="haveRead">Have read</label>
    </div>
    <button type="submit">Submit</button>
</form>
